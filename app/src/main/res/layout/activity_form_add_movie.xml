<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/navy"
    tools:context=".FormAddMovie">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lavender_border"
            android:orientation="vertical"
            android:padding="20dp">
            <!-- Your existing layout -->

            <ImageView
                android:id="@+id/uploadimg"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:src="@drawable/uploadfile"
                android:scaleType="centerInside"/>

            <Button
                android:id="@+id/selectImageBtn"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/emas"
                android:fontFamily="@font/poppinsregular"
                android:text="Pilih File"
                android:textColor="@color/navy"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txt_title_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppinsregular"
                android:background="@drawable/lavender_border"
                android:gravity="start|center_vertical"
                android:hint="Judul Film"
                android:padding="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txt_kategori_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lavender_border"
                android:gravity="start|center_vertical"
                android:hint="Genre Film"
                android:fontFamily="@font/poppinsregular"
                android:padding="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txt_des_edit"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lavender_border"
                android:fontFamily="@font/poppinsregular"
                android:gravity="start|center_vertical"
                android:hint="Deskripsi Film"
                android:padding="10dp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_Add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/navy"
                android:fontFamily="@font/poppinsregular"
                android:text="Simpan"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
