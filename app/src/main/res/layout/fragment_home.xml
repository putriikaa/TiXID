<!-- fragment_home.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppin"
                android:text="Hello,"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/your_usn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppin"
                android:layout_marginTop="2dp"
                android:text="Username"
                android:textColor="@color/blue"
                android:layout_below="@+id/hello"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/top_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppin"
                android:layout_marginTop="50dp"
                android:text="Top Movie"
                android:textColor="@color/black"
                android:layout_below="@+id/hello"
                android:textSize="16sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/your_usn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="30dp"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:text="TOP MOVIE"
                        android:fontFamily="@font/poppinsemibold"
                        android:textColor="#05299E"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold"/>

                    <!-- Use the RecyclerView instead of the previous CardView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewMovies"
                        tools:listitem="@layout/list_movie_users"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Second Column -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start">

                    <!-- Content for the second column goes here -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Second Column Content"
                        android:textSize="18sp"
                        android:padding="10dp"/>
                </LinearLayout>
            </GridLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
